<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_item_customer_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recycler_item_customer_selection_img"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_un_selected" />

            <TextView
                android:id="@+id/recycler_item_customer_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Name"
                android:textColor="@color/product_name"
                android:textSize="16sp"
                app:fontFamily="serif"
                app:fontWeight="500"
                app:layout_constraintEnd_toStartOf="@+id/recycler_item_customer_barcode_img"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_customer_selection_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/recycler_item_customer_mobile_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/mobile"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_customer_selection_img"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_customer_name_txt" />

            <ImageView
                android:id="@+id/recycler_item_customer_receipt_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_customer_selection_img"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_customer_mobile_txt"
                app:srcCompat="@drawable/ic_receipt" />

            <TextView
                android:id="@+id/recycler_item_customer_receipt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="0"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_customer_receipt_img"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_customer_mobile_txt" />

            <ImageView
                android:id="@+id/recycler_item_customer_wallet_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_customer_receipt_txt"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_customer_mobile_txt"
                app:srcCompat="@drawable/ic_wallet" />

            <TextView
                android:id="@+id/recycler_item_customer_wallet_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="37dp"
                android:text="0"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_customer_wallet_img"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_customer_name_txt" />

            <ImageView
                android:id="@+id/recycler_item_customer_barcode_img"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_more" />

            <TextView
                android:id="@+id/recycler_item_customer_barcode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_customer_barcode_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>