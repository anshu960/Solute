<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.business.product.detail.ProductDetailContainerFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_product_details_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        app:backgroundTint="@color/colorThemePrimary"
        app:layout_constraintBottom_toTopOf="@+id/activity_product_details_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_create"
        app:tint="@android:color/white" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/activity_product_details_menu"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/product_details_menu" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/activity_product_details_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/activity_product_details_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/product_details_navigation" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_product_delete_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:src="@drawable/delete"
        app:backgroundTint="@color/colorThemePrimary"
        app:layout_constraintBottom_toTopOf="@+id/activity_product_details_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@android:color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>